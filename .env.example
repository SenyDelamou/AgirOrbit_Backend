# Copy this file to .env and fill the values before running the server

# PostgreSQL connection URL (required)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://user:password@localhost:5432/agriorbit?schema=public"

# JWT and OTP secrets (required)
JWT_ACCESS_SECRET="replace_with_a_strong_random_string"
OTP_SECRET="replace_with_a_strong_random_string"

# Server
NODE_ENV=development
PORT=4000

# Token TTLs (optional)
ACCESS_TOKEN_TTL_SECONDS=900
REFRESH_TOKEN_TTL_SECONDS=2592000

# Frontend
FRONTEND_URL="http://localhost:5173"
# In production you can set a single URL or multiple comma-separated origins:
# FRONTEND_URL="https://agriorbit.vercel.app"
# or
# FRONTEND_URLS="https://agriorbit.vercel.app,https://studio.agriorbit.example"

# Google OAuth (optional)
GOOGLE_CLIENT_ID="324455871248-80s8dpjn5jbarer6rv9ldlum23isflco.apps.googleusercontent.com"

# SMTP (optional - used for e-mails)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="no-reply@agriorbit.local"
